{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    // Add type definitions for our Astro runtime.
    "types": ["astro/client"],
    "baseUrl": ".",
    "paths": {
      "$assets/*": ["src/assets/*"],
      "$components/*": ["src/components/*"],
      "$layouts/*": ["src/layouts/*"],
      "$styles/*": ["src/styles/*"],
      "$utils/*": ["src/utils/*"]
    },
  },
}
